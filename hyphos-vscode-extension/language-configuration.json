{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(invoke|embody|emanate).*:",
    "decreaseIndentPattern": "^\\s*(transcend|resolve)\\b"
  }
}
