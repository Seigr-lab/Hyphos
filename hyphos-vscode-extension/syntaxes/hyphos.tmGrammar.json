{
  "name": "Hyphos Language Grammar",
  "scopeName": "source.hyphos",
  "fileTypes": ["hyph"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#metawords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hash.hyphos",
          "match": "#.*$"
        },
        {
          "name": "comment.block.hyphos",
          "begin": "<!--",
          "end": "-->",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.hyphos",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.hyphos",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.hyphos",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.hyphos",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.senary.hyphos",
          "match": "\\b[0-5]+[sS]\\b"
        },
        {
          "name": "constant.numeric.decimal.hyphos",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.float.hyphos",
          "match": "\\b\\d+\\.\\d+\\b"
        }
      ]
    },
    "metawords": {
      "patterns": [
        {
          "name": "keyword.control.hyphos",
          "match": "\\b(invoke|embody|emanate|resonate|transcend|synthesize|metamorphose|harmonize|crystallize|channel|converge|emerge|integrate|compose|manifest|project|elevate|balance|align|pulse|flow|dance|suspend|breathe|reflect|transform|adapt|resolve|catalyze|orchestrate|amplify|radiate|navigate|ascend)\\b"
        },
        {
          "name": "entity.name.type.metaword.hyphos",
          "match": "\\b(senary|temporal|spatial|noesis|graphics|energy|network_stack|quantum_field|consciousness|holistic|harmonic)\\b"
        },
        {
          "name": "support.function.builtin.hyphos",
          "match": "\\b(base6_add|base6_multiply|temporal_flow|coordinate_transform|neural_process|render_visual|energy_pulse|network_send|quantum_entangle|conscious_reflect|balance_field|harmonic_resonate)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.hyphos",
          "match": "=|::|<-|->|<=>|~~"
        },
        {
          "name": "keyword.operator.arithmetic.hyphos",
          "match": "\\+|\\-|\\*|\\/|\\%|\\^"
        },
        {
          "name": "keyword.operator.comparison.hyphos",
          "match": "==|!=|<|>|<=|>=|~="
        },
        {
          "name": "keyword.operator.logical.hyphos",
          "match": "&&|\\|\\||!|and|or|not"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.hyphos",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
