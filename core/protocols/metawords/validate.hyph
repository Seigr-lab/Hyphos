syntax = "proto3";

package hyphos.validate;

import "hyphos/base_modules/consciousness_operations.hyph";
import "hyphos/base_modules/bio_digital_operations.hyph";
import "hyphos/base_modules/senary_mathematics.hyph";
import "hyphos/base_modules/energy_operations.hyph";
import "hyphos/base_modules/protocol_integration.hyph";
import "seigr_math.proto";
import "seigr_timestamp.proto";

// Validate operation types (senary-mapped 0-5)
enum ValidateOperation {
    VALIDATE_UNKNOWN = 0;
    CREATE = 1;
    PROCESS = 2;
    VALIDATE = 3;
    OPTIMIZE = 4;
    INTEGRATE = 5;
}

// Validate processing states (senary-mapped 0-5)
enum ValidateProcessingState {
    STATE_IDLE = 0;
    STATE_ACTIVE = 1;
    STATE_PROCESSING = 2;
    STATE_OPTIMIZING = 3;
    STATE_INTEGRATING = 4;
    STATE_COMPLETE = 5;
}

// Validate data types (senary-mapped 0-5)
enum ValidateDataType {
    DATA_UNKNOWN = 0;
    DATA_INPUT = 1;
    DATA_OUTPUT = 2;
    DATA_INTERMEDIATE = 3;
    DATA_METADATA = 4;
    DATA_RESULT = 5;
}

// Core validate messages
message ValidateObject {
    string object_id = 1;
    ValidateDataType data_type = 2;
    SenaryArray data_payload = 3;
    ValidateProcessingState state = 4;
    SenaryTimestamp created_at = 5;
}

message ValidateRequest {
    ValidateOperation operation = 1;
    ValidateObject target_object = 2;
    SenaryArray parameters = 3;
    ValidateProcessingState desired_state = 4;
    SenaryTimestamp timestamp = 5;
}

message ValidateResponse {
    bool success = 1;
    ValidateObject result_object = 2;
    SenaryArray result_data = 3;
    ValidateProcessingState new_state = 4;
    string error_message = 5;
}

// Validate service definition
service ValidateService {
    rpc Create(ValidateRequest) returns (ValidateResponse);
    rpc Process(ValidateRequest) returns (ValidateResponse);
    rpc Validate(ValidateRequest) returns (ValidateResponse);
    rpc Optimize(ValidateRequest) returns (ValidateResponse);
    rpc Integrate(ValidateRequest) returns (ValidateResponse);
}
